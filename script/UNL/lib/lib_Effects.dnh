function PreExplosion1(real x, real y, int duration, int duration2, int density, real speedMin, real speedMax, int blend,
					   int r, int g, int b, int graphic) {
	NotifyEventAll(EV_USER_SYSTEM + 6, x, y, duration, duration2, density, speedMin, speedMax, blend, r, g, b, graphic);
